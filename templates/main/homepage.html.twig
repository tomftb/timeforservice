{% extends 'base.html.twig' %}

{% block title %}{{ parent()}}{% endblock %}
{% block body %}
    <div class="flex">
        <aside class="hidden md:block md:w-64 bg-gray-900 px-2 py-6">
            <h2 class="text-xl text-white font-semibold mb-6 px-2">Clients</h2>
            <turbo-frame id="client-info">
                {{ include('main/_client_list.html.twig') }}
            </turbo-frame>
        </aside>

        <section class="flex-1 ml-10">
            <form
                method="GET"
                action="{{ path('app_main_homepage') }}"
                class="mb-6 flex justify-between"
            >
                <input
                    type="search"
                    name="query"
                    value="{{ app.request.query.get('query') }}"
                    aria-label="Search services"
                    placeholder="Search services"
                    class="w-1/3 px-4 py-2 rounded bg-gray-800 text-white placeholder-gray-400"
                >
                <div class="whitespace-nowrap m-2 mr-4">{{ services|length }} results</div>
            </form>
            <div class="bg-gray-800 p-4 rounded">
                <table class="w-full text-white">
                    <thead>
                        <tr>
                            <th class="text-left py-2">Description</th>
                            <th class="text-left py-2 pr-4">Client Point</th>
                            <th class="text-left py-2">Ended at</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for service in services %}
                        <tr class="border-b border-gray-700 {% if loop.index is odd %} bg-gray-800 {% else %} bg-gray-700 {% endif %}">
                            <td class="p-4">{{ service.description }}</td>
                            <td class="px-2 whitespace-nowrap">
                                {# POPOVER START #}
                                <div
                                    data-controller="popover"
                                    data-action="mouseenter->popover#show mouseleave->popover#hide"
                                    class="relative"
                                >
                                    {{ service.clientPoint.name }}
                                    <img
                                        src="{{ asset( 'images/'~service.cLientPoint.id) }} "
                                        alt="Image of {{ service.cLientPoint.name }} "
                                        class="inline-block w-8 h-8 rounded-full bg-gray-600 ml-2"
                                    >
                                    <template data-popover-target="content">
                                        <div 
                                            data-popover-target="card"
                                            class="max-w-sm rounded shadow-lg bg-gray-900 absolute left-0 bottom-10"
                                        >
                                            <div class="px-6 py-4">
                                                <h4>
                                                    <a
                                                        class="hover:text-blue-300 transition-colors duration-100"
                                                        href=" {{ path ( 'app_clientpoint_show',{ id: service.clientPoint.id }) }} ">
                                                        {{ service.clientPoint.name }}
                                                    </a>
                                                </h4>
                                                <small>{{ service.clientPoint.street }}</small>
                                                <small>{{ service.clientPoint.zipCode~ " " ~ service.clientPoint.town }}</small>
                                            </div>
                                        </div>
                                    </template>
                                </div>
                                {# POPOVER ENDS #}
                            </td>
                            <td class="px-2 whitespace-nowrap">{{ service.endedAt|date('Y-m-d') }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="flex items-center mt-6 space-x-4">
                <a href="#" class="block py-2 px-4 bg-gray-700 text-white rounded hover:bg-gray-600">Previous</a>
                <a href="#" class="block py-2 px-4 bg-gray-700 text-white rounded hover:bg-gray-600">Next</a>
            </div>
        </section>
    </div>
{% endblock %}
