{% set backPath=path('app_clientpoint_index') %}
{% extends 'modalBase.html.twig' %}
{% block title %}{{ parent() }} - Edit Client Point - {{ clientPoint.id }}{% endblock %}
{% block body %}
<div class="m-4 p-4 modal:m-0 modal:p-0 bg-gray-800 rounded-lg">
    <div class="flex justify-between">
        <h1 class="text-xl font-semibold text-white mb-4">Edit Client Point</h1>
        <div class="mr-0">
            {# CLOSE ACTION - DEPENDS OF WINDOWS TYPE #}
            {{ loadFrame.closeAction | raw }}
            {# END CLOSE ACTION #}
        </div>
    </div>
    {{ include('clientpoint/_form.html.twig') }}
</div>
{% endblock %}
{# ADD TURBO STREAM TO UPDATE ROW IN TABLE WITH CONTENT #}
{% block stream_success %}
    {# add `s` to target to use CSS selector #}
    <turbo-stream action="update" target="modal">
        <template>
        </template>
    </turbo-stream>
    <turbo-stream action="replace" target="clientpoint-list-item-{{ clientPoint.id }}">
        <template>
            {% include('clientpoint/_row.html.twig') %}
        </template>
    </turbo-stream>
{% endblock %}