<tr class="even:bg-gray-700 odd:bg-gray-600">
    <td class="px-6 py-4 whitespace-nowrap">{{ user.id }}</td>
    <td class="px-6 py-4 whitespace-nowrap">{{ user.name }}</td>
    <td class="px-6 py-4">{{ user.firstName }}</td>
    <td class="px-6 py-4 whitespace-nowrap">{{ user.lastName }}</td>
    <td class="px-6 py-4 whitespace-nowrap flex">
       {# SHOW #}
        <a 
            href="{{ path('app_user_show', {'id': user.id}) }}" 
            class="text-blue-400 hover:text-blue-600"
            data-turbo-frame="modal"
        >show</a>
        {# EDIT #}   
        <a 
            href="{{ path('app_user_edit', {'id': user.id}) }}" 
            class="ml-4 text-yellow-400 hover:text-yellow-600"
            data-turbo-frame="modal"
        >edit</a>
        {# DELETE #}
        {# use :allowSmallWidth with : at the beginning of the variable name to send a boolean value, oposite it will send a string value #}
        <twig:Modal :allowSmallWidth="true">
            <twig:block name="trigger">
                <button
                    class="ml-4 text-red-400 hover:text-red-600"
                    data-action="modal#open"
                >delete</button>
            </twig:block>
            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
                <path d="M12 9v4"/>
                <path d="M12 16v.01"/>
            </svg>
            <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">
                Delete this user???
            </h3>
            <div class="flex justify-between">
                <form method="dialog">
                    <twig:Button variant="link">Cancel</twig:Button>
                </form>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </twig:Modal>
    </td>
</tr>