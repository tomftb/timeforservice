{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Manage Users{% endblock %}
{% block body %}
<div class="m-4 p-4 bg-gray-800 rounded-lg">
        {# Create new #}
    <div
        class="flex justify-between"
    >
        <h1 class="text-xl font-semibold text-white mb-4">Application users:</h1>
        <twig:Button
            tag="a"
            href="{{ path('app_user_new') }}"
            data-turbo-frame="modal"
            class="flex items-center space-x-1 font-bold"
        >
        <span>Create new</span>
            <svg  xmlns="http://www.w3.org/2000/svg"  width="16"  height="16"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
                <path d="M16 19h6" /><path d="M19 16v6" />
                <path d="M6 21v-2a4 4 0 0 1 4 -4h4" />
            </svg>
        </twig:Button>
    </div>
    {# END Create New #}
    <table class="min-w-full bg-gray-800 text-white" id="users-list">
        <thead class="border-b border-gray-700">
            <tr>
                {% set columnsNames = ['Id','Name','First Name','Last Name','Actions'] %}
                {% for name in columnsNames %}
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">{{ name }}</th>
                {% else %}
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Columns names are not specified</th>
                {% endfor %}   
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-600">
        {% for user in users %}
            {% include('user/_row.html.twig') %}
        {% else %}
            <tr>
                <td colspan="5" class="px-6 py-4 whitespace-nowrap text-center text-gray-400">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
