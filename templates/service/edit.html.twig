                <div class="inline-block">
                    {% if form.vars.data.id|default %}
                        {{ include('service/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
        {{ include('service/_form.html.twig') }}
    </div>
{% endblock %}
